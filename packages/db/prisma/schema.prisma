  title      String               @unique
  email      OrgEmail[]
  orgUsers   UserToOrganization[]
  searchable Boolean              @default(false)

  key   TranslationKey @relation(fields: [tsKey, tsNs], references: [key, ns], onDelete: Restrict, onUpdate: Cascade)
  tsKey String
  tsNs  String

