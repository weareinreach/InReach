{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~ui/*": ["./*"],
			"~api/*": ["../../packages/api/*"],
			"~app/*": ["../../apps/app/src/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~util/*": ["../../packages/util/*"],
		},
		"strict": true,
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx",
		".storybook/**/*",
		"../../@types/**/*.ts",
		"../../apps/app/src/types/nextjs-routes.d.ts",
		"../../apps/app/src/types/i18next.d.ts",
	],
	"exclude": ["**/node_modules", "**/storybook-static/"],
}
