generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique", "fieldReference", "filteredRelationCount", "fullTextSearch", "postgresqlExtensions", "tracing", "views", "jsonProtocol"]
}

generator zod {
  provider               = "zod-prisma-types"
  output                 = "../zod-schemas"
  useMultipleFiles       = true
  createModelTypes       = true
  createInputTypes       = false
  createPartialTypes     = true
  addInputTypeValidation = false
  addSelectType          = false
  useDefaultValidators   = false
}

