{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"env": ["NODE_ENV"]
		},
		"app#build": {
			"env": ["DATABASE_URL", "NEXTAUTH_SECRET", "NEXTAUTH_URL", "VERCEL_URL", "PORT"]
		},
		"web#build": {
			"env": [
				"SENTRY_DSN",
				"SANITY_TOKEN",
				"NEXT_PUBLIC_SANITY_API_VERSION",
				"NEXT_PUBLIC_SANITY_DATASET",
				"NEXT_PUBLIC_SANITY_PROJECT_ID",
				"NEXT_PUBLIC_SENTRY_DSN"
			]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"chromatic": {
			"dependsOn": [],
			"env": ["CHROMATIC_PROJECT_TOKEN"]
		}
	}
}
