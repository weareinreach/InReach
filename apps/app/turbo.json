{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"dependsOn": [
				"build:prebuild",
				"^build",
				"^db:generate",
				"^generate:data",
				"^db:deploy",
				"^db:dataMigrate"
			],
			"env": [
				"AWS_REGION",
				"COGNITO_ACCESS_KEY",
				"COGNITO_CLIENT_ID",
				"COGNITO_CLIENT_SECRET",
				"COGNITO_ISSUER",
				"COGNITO_SECRET",
				"COGNITO_USER_POOL_ID",
				"CRON_KEY",
				"CROWDIN_TOKEN",
				"DATABASE_URL",
				"DB_DIRECT_URL",
				"EDGE_CONFIG",
				"FEATURE_FLAG_CONFIG",
				"GOOGLE_PLACES_API_KEY",
				"KV_REST_API_READ_ONLY_TOKEN",
				"KV_REST_API_TOKEN",
				"KV_REST_API_URL",
				"KV_URL",
				"NEXTAUTH_SECRET",
				"NEXTAUTH_URL",
				"NODE_ENV",
				"PORT",
				"RELATIVE_CI_KEY",
				"RELATIVE_CI_SLUG",
				"SENTRY_AUTH_TOKEN",
				"SENTRY_ORG",
				"SENTRY_PROJECT",
				"VERCEL_URL"
			],
			"outputs": [".next/**"]
		},
		"build:prebuild": {
			"cache": false
		},
		"lint": {
			"outputs": [".next/cache/eslint/**"]
		},
		"lint:fix": {
			"outputs": [".next/cache/eslint/**"]
		}
	}
}
