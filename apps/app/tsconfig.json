{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~app/*": ["./src/*"],
			"~api/*": ["../../packages/api/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~ui/*": ["../../packages/ui/*"]
		}
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.mjs",
		"./**/*.cjs"
	],
	"exclude": ["node_modules"]
}
