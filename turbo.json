{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["NODE_ENV"],
			"outputs": ["dist/**", ".next/**"]
		},
		"app#build": {
			"env": ["DATABASE_URL", "NEXTAUTH_SECRET", "NEXTAUTH_URL", "VERCEL_URL", "PORT"]
		},
		"web#build": {
			"env": [
				"SENTRY_DSN",
				"SANITY_TOKEN",
				"NEXT_PUBLIC_SANITY_API_VERSION",
				"NEXT_PUBLIC_SANITY_DATASET",
				"NEXT_PUBLIC_SANITY_PROJECT_ID",
				"NEXT_PUBLIC_SENTRY_DSN"
			]
		},
		"chromatic": {
			"dependsOn": [],
			"env": ["CHROMATIC_PROJECT_TOKEN"]
		},
		"dev": {
			"cache": false
		},
		"format": {
			"dependsOn": [],
			"outputs": []
		},
		"lint": {
			"outputs": []
		},
		"lint:fix": {
			"outputs": []
		},
		"post-install": {
			"dependsOn": [],
			"outputs": ["packages/db/zod-schemas/**", "docs/database/**"]
		}
	}
}
