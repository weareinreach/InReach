{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"@weareinreach/app#build": {
			"dependsOn": ["^build", "^db:generate"],
			"env": [
				"DATABASE_URL",
				"NEXTAUTH_SECRET",
				"NEXTAUTH_URL",
				"VERCEL_URL",
				"PORT",
				"COGNITO_CLIENT_ID",
				"COGNITO_CLIENT_SECRET",
				"COGNITO_ISSUER",
				"COGNITO_USER_POOL_ID",
				"AWS_REGION"
			]
		},
		"@weareinreach/web#build": {
			"dependsOn": ["^build"],
			"env": [
				"WEB_SENTRY_DSN",
				"SANITY_TOKEN",
				"NEXT_PUBLIC_SANITY_API_VERSION",
				"NEXT_PUBLIC_SANITY_DATASET",
				"NEXT_PUBLIC_SANITY_PROJECT_ID",
				"NEXT_PUBLIC_WEB_SENTRY_DSN"
			]
		},
		"//#clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"env": ["NODE_ENV"],
			"outputs": ["dist/**", ".next/**", "storybook-static/**"]
		},
		"build:aws": {
			"dependsOn": ["^db:generate"],
			"outputs": ["dist/**"]
		},
		"chromatic": {
			"dependsOn": ["build"],
			"env": ["CHROMATIC_PROJECT_TOKEN"]
		},
		"clean": {
			"cache": false
		},
		"clean:node": {
			"cache": false
		},
		"db:generate": {
			"inputs": ["prisma/schema.prisma"],
			"outputs": ["prisma/generated/**", "zod-schemas/**"]
		},
		"db:generate:aws": {
			"cache": false,
			"inputs": ["prisma/schema.prisma"]
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^db:generate"],
			"persistent": true
		},
		"format": {
			"dependsOn": ["^db:generate"],
			"inputs": ["**/*.{cjs,mjs,js,jsx,ts,tsx,json,prisma,html,css,scss,yml,yaml,md}"],
			"outputs": ["node_modules/.cache/prettier/.prettier-cache"]
		},
		"lint": {
			"inputs": ["**/*.{cjs,mjs,js,jsx,ts,tsx}"],
			"outputs": [".next/cache/eslint/**", ".eslintcache"]
		},
		"lint:fix": {
			"inputs": ["**/*.{cjs,mjs,js,jsx,ts,tsx}"],
			"outputs": [".next/cache/eslint/**", ".eslintcache"]
		},
		"post-install": {},
		"type-check": {
			"cache": false,
			"dependsOn": ["^db:generate"]
		}
	}
}
