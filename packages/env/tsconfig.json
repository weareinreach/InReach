{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~api/*": ["../../packages/api/*"],
			"~app/*": ["../../apps/app/src/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~ui/*": ["../../packages/ui/*"],
			"~web/*": ["../../apps/web/src/*"],
			"~util/*": ["../../packages/util/*"],
		},
	},
	"exclude": ["node_modules"],
	"include": ["./**/*.ts", "../../@types/**/*.ts"],
}
