{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~api/*": ["../../packages/api/*"],
			"~app/*": ["../../apps/app/src/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~ui/*": ["../../packages/ui/*"],
			"~web/*": ["./src/*"]
		},
		"strict": true
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.mjs",
		"./**/*.cjs",
		"../../@types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
