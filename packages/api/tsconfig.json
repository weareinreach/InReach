{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": "./",
		"strict": true,
		"paths": {
			"~api/*": ["./*"],
			"~app/*": ["../../apps/app/src/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~ui/*": ["../../packages/ui/*"],
			"~web/*": ["../../apps/web/src/*"],
			"~util/*": ["../../packages/util/*"]
		}
	},
	"exclude": ["**/node_modules", "./**/.*/"],
	"include": ["./**/*.ts", "./**/*.js", "../../@types/**/*.ts"]
}
