{
	"extends": "@weareinreach/config/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"plugins": [{ "name": "next" }],
		"allowImportingTsExtensions": true,
		"paths": {
			"~app/*": ["./src/*"],
			"~api/*": ["../../packages/api/*"],
			"~auth/*": ["../../packages/auth/*"],
			"~db/*": ["../../packages/db/*"],
			"~ui/*": ["../../packages/ui/*"]
		}
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.mjs",
		"./**/*.cjs",
		"../../@types/**/*.ts"
	],
	"exclude": ["**/node_modules/**"]
}
